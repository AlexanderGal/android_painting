<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_layout_height"
    android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/choose_circle_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/vector_circle"
        android:text="@string/circle"
        tools:text="Circle" />

    <Button
        android:id="@+id/choose_rect_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/vector_rectangle"
        android:text="@string/rect"
        tools:text="Rect" />

    <Button
        android:id="@+id/choose_line_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/vector_line"
        android:text="@string/line"
        tools:text="Line" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/close_outline"
        android:text="@string/clear"
        tools:text="Clear" />
</LinearLayout>